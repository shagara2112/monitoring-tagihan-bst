# Environment Variables Template
# Copy this file to .env.local for development or .env.production for production

# Database Configuration
# For local development with SQLite
DATABASE_URL="file:./dev.db"

# For production with PostgreSQL (Docker/Cloud)
# DATABASE_URL="postgresql://username:password@localhost:5432/invoice_app"

# Supabase Configuration (Optional - if using Supabase instead of local DB)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Authentication Configuration
JWT_SECRET="your_jwt_secret_key_here_make_it_long_and_random_minimum_32_characters"
NEXTAUTH_SECRET="your_nextauth_secret_key_here_make_it_long_and_random_minimum_32_characters"
NEXTAUTH_URL="http://localhost:3000" # Change to your production URL

# Application Configuration
NODE_ENV="development" # Change to "production" for production
PORT=3000

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration (Optional)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5MB"

# Backup Configuration (Optional)
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Monitoring & Analytics (Optional)
SENTRY_DSN="your_sentry_dsn"
GOOGLE_ANALYTICS_ID="your_ga_id"

# Security Configuration
CORS_ORIGIN="http://localhost:3000" # Change to your production domain
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Development Only
# ENABLE_PRISMA_STUDIO="true"
# DEBUG_MODE="true"